<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rama.arogya.AngerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Try to RELAX. Tell us more about it "
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How do you describe your emotion: "
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imageView_disappontment"
        android:src="@drawable/rage"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rage"
        android:id="@+id/textView_rage"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/imageView_disappontment"
        android:layout_toRightOf="@+id/imageView_disappontment"
        android:layout_toEndOf="@+id/imageView_disappontment"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imageView_frustration"
        android:src="@drawable/frustration"
        android:layout_below="@+id/imageView_disappontment"
        android:layout_alignLeft="@+id/imageView_disappontment"
        android:layout_alignStart="@+id/imageView_disappontment"
        android:layout_marginTop="22dp" />

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imageView_envy"
        android:src="@drawable/envy"
        android:layout_below="@+id/imageView_frustration"
        android:layout_alignLeft="@+id/imageView_frustration"
        android:layout_alignStart="@+id/imageView_frustration"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Frustration"
        android:id="@+id/textView9"
        android:layout_above="@+id/imageView_envy"
        android:layout_alignLeft="@+id/textView_rage"
        android:layout_alignStart="@+id/textView_rage"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Envy"
        android:id="@+id/textView15"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/imageView_envy"
        android:layout_alignRight="@+id/textView_rage"
        android:layout_alignEnd="@+id/textView_rage" />

</RelativeLayout>
