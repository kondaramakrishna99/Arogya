<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rama.arogya.DepressedActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="We are sorry to know that you are Sad"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How do you describe your emotion: "
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imageView_disappontment"
        android:src="@drawable/disappointment"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Disappointment"
        android:id="@+id/textView_disappoint"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/imageView_disappontment"
        android:layout_toRightOf="@+id/imageView_disappontment"
        android:layout_toEndOf="@+id/imageView_disappontment"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imageView_suffering"
        android:src="@drawable/torment"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageView_disappontment"
        android:layout_alignRight="@+id/imageView_disappontment"
        android:layout_alignEnd="@+id/imageView_disappontment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Suffering"
        android:id="@+id/textView17"
        android:layout_marginTop="32dp"
        android:layout_alignTop="@+id/imageView_suffering"
        android:layout_alignLeft="@+id/textView_disappoint"
        android:layout_alignStart="@+id/textView_disappoint" />
</RelativeLayout>
