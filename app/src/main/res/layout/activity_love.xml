<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rama.arogya.LoveActivity"
    android:id="@+id/ghgh">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="We are glad that you are in LOVE"
        android:id="@+id/textView_glad"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How do you describe your emotion:"
        android:id="@+id/textView_emotionDescribee"
        android:layout_below="@+id/textView_glad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/imageView_affection"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="36dp"
        android:src="@drawable/love"
        android:layout_marginStart="36dp"
        android:layout_below="@+id/textView_emotionDescribee"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Affection"
        android:id="@+id/textView_affection"
        android:layout_alignBottom="@+id/imageView_affection"
        android:layout_toRightOf="@+id/imageView_affection"
        android:layout_toEndOf="@+id/imageView_affection"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="36dp" />

</RelativeLayout>
